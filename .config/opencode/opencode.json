{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "financecore": {
      "type": "remote",
      "url": "http://localhost:5001/mcp",
      "enabled": true,
      "headers": {
        "X-Tenant": "ie"
      }
    },
    "calendar": {
      "type": "local",
      "command": ["/Users/rodrigo.soares/personal/mcp-macos-calendar/.build/debug/MCPMacOSCalendar", "--transport", "stdio"],
      "enabled": true
    },
    "atlassian": {
      "type": "remote",
      "url": "https://mcp.atlassian.com/v1/mcp",
      "enabled": true
    }
  },
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "autoupdate": "notify",
  "lsp": {
    "csharp": {
      "disabled": true
    },
    "roslyn": {
      "command": ["/Users/rodrigo.soares/.local/share/nvim/mason/bin/roslyn", "--logLevel=Information", "--extensionLogDirectory=/tmp/roslyn-logs", "--stdio"],
      "extensions": [".cs"]
    }
  }
}
